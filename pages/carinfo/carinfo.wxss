/**/
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}

.zan-dialog__container {
    position: fixed;
    bottom: 400rpx;
    width: 100%;
    height: 85vh;
    background: #f8f8f8;
    transform: translateY(300%);
    transition: all 0.4s ease;
    z-index: 12;
    border-radius: 20rpx;
    bottom: 0;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
.brandchosse text{
  display: block;
  padding: 0.75em 0;
  border-bottom: 1px solid #eee;
}

.tips{
  padding: 1em 0;
}
.tips .h3{
  padding: 0.5em 0;
  color: rgba(0,0,0,0.5);
}
.tips .p{
  font-size: 0.8em;
  color: rgba(0,0,0,0.3);
}

.tips .ul .li{
  margin: 0em 0 1em;
}

.login-content .ul .li button{
  width: 100%;
  font-size: 0.85em;
  color: #9b9b9b;
  background: none;
  font-weight: 500;
  text-align: left;
}
.carinfoContent .li{
  position: relative;
}
.carinfoContent .li image{
  width:1.5em;
  height: 1.5em;
  position: absolute;
  right: 1%;
}



.login-content .ul .li text{
  width: 30%;
  font-size: 0.95em;
  display: inline-block;
  vertical-align: middle;
}
.login-content .ul .li input,.login-content .ul .li button{
  width: 65%;
  display: inline-block;
  vertical-align: middle;
}





.login-content .ul .li.phone input{
  width:56%;
  display: inline-block;
  vertical-align: middle;
}

.login-content .ul .li.phone button{
  width: 40%;
  background: #eee;
  padding: 2%;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}






