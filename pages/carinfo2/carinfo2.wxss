/* pages/carinfo2/carinfo2.wxss */
.carinfo2-content{
  padding:3em 0 0 ;
}
.carinfo2-content .ul .li image{
  width: 1.5em;
  height: 1.5em;
  float: right;
}
.car-pay{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: linear-gradient(to right, #eec667 , #f6a74d);
  left: 0;
  text-align: center;
  color: #fff;
  padding: 0.85em 0;
  font-size: 1em;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.yuyue{
  padding:1em;
}
.yuyue .ul .li{
  padding: 1em 0;
  border-bottom: 1px solid #eee;
}
.yuyue .ul .li text,.yuyue .ul .li input{
  display: inline-block;
  vertical-align: middle;
}
.yuyue .ul .tips{
  font-size: 0.85em;
  color: #999;
}
.btn{
  background: #12315d;
  text-align: center;
  color: #fff;
  padding: 0.75em 0;
  margin: 3em 0;
}
.modal-dialog {
  width: 90%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: #f9f9f9;
  transform: translate(-50%,-50%);
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}




.type{
  margin:0.3em 0 4em;
  padding: 0.35em;
}

.type radio-group,.type .cartype{
  display: inline-block;
  vertical-align: middle;
  margin: 0;
}
.type .cartype{
  margin-right: 0.5em;
}
.type text{
  margin-bottom: 1em;
  display: block;
}
.weui-cell__hd,.weui-cell__bd {
  display: inline-block;
  vertical-align: middle;
}
.weui-cell__hd radio{
  position: relative;
  top: -1px;
}
.weui-cell__bd{
  font-size: 0.85em;
}
.weui-check__label{
  margin-right: 1em;
}
/* 默认背景样式*/
radio .wx-radio-input{
  width: 40rpx;
  height: 40rpx;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  border: none;
  background: #f6a74d;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;/* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size:30rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  border: 1px solid #f6a74d;
  background: #f6a74d;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}