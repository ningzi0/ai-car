.option{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.25);
  
}
.option{
  display: none;
}
.zan-dialog--show{
  display: block
}
.zan-dialog--show .option__container{
  position: absolute;
  top: 50%;
  padding: 1em;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 70%;
  text-align: center;
  box-shadow: 0 0 1em rgba(0,0,0,0.25);
  border-radius: 0.5em;
  background: #f9f9f9;
}
.option-con{
  background: #fff;
}

.zan-dialog--show .option__container .option-list picker, .zan-dialog--show .option__container .option-list navigator {
  padding: 1em 0;
  display: block;
  font-size: 0.9em;
  border-bottom: 1px solid #eee;
}
.zan-dialog--show .option__container .option-list:last-child{
  border: 0;
}
.zan-dialog--show .option__container .option-list:active{
  background: #eee;
}
.optitle{
  padding: 1em 0;
  background: #f9f9f9;
  font-size: 0.9em;
}
.option-con button{
  width: 100% !important;
  background: #12315d;
  margin: 0.35em 0;
  color: #fff;
}

