/**index.wxss**/
.indexTitle{
  text-align: center;
  background-color: #ececec;
  font-size: 3em;
  font-weight: bold;
  color: #fff;
  margin: 2%;
  padding: 8% 0;
}
.indexTitle:active{
  background-color: #e2e2e2;
}
.indexTitactive{
  display: flex;
  background: linear-gradient(to right, #eec667 , #f6a74d);
  height: 16em;
}
.indexTitactive .item{
  flex: 1;
  padding: 5%;
  font-size:0.85em ;
  position: relative;
  overflow: hidden;
}
.indexTitactive .item .em{
  padding: 3%;
  background: #000;
  color: #fff;
  text-align: center;
  border-radius: 10em;
  margin: 5% 0 0;
  box-shadow: 0 0.35em 0.2em rgba(0,0,0,0.1);
}
.indexTitactive .item image{
  position: absolute;
  width: 15em;
  height: 15em;
  opacity: 0.1;
  right: -30%;
  top: 50%;
  transform: translate(0,-50%);
}
.indexTitactive .item:nth-child(1){
  flex: 2;
}
.indexTitactive .item .span{
  margin: 2% 0;
}
.indexTitactive .item .span:nth-child(1){
  font-size: 1.3em;
  font-weight: bold;
}

.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  box-shadow: 0 0 0.5em rgba(0,0,0,0.05);
}
.footer .item{
  flex: 1;
  text-align: center;
  padding: 1em 0;
  font-size: 0.85em;
}
.footer .active{
  color: #f6a74d;
}


.index input{
  background-color: #f3f3f3;
  font-size: 0.85em;
  padding: 3%;
  margin: 2%;
}
.index .text{
  padding: 2%;
  color: #999;
  border-bottom: 1px solid #eee;
}
.index .text text{
  font-size: 0.8em;
  display: inline-block;
  margin: 0 2%;
}




.main {
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.main_item {
  display: flex;
  flex-direction: row;
  background: #fff;
  overflow: hidden;
}
 
movable-area {
  width: 532rpx;
  height: 256px;
  background: #fff;
}
 
movable-view {
  width: 716rpx;
  height: 256px;
}
 
.main_item_content {
  box-sizing: border-box;
  height: 256px;
  border-radius: 10rpx;
}
 
.delete_btn {
  width: 184rpx;
  height: 256px;
  background-color: #8FC31F;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 256px;
}

