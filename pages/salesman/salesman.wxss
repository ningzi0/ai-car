.salesmanInput{
  font-size: 0.85em;
  padding: 0.75em 2.78em;
  background: #f9f9f9;
  margin: 0 0.5em;
}

.salesmanList{
  padding: 1em 0;
  font-size: 0.8em;
  
}
.salesmanList .text{
  padding: 1em 0.75em;
  display: flex;
  border: 1px solid #eee;
}
.salesmanList .text:nth-child(odd){
  background: #f7f7f7;
}
.salesmanList .text text{
  flex: 1;
}
.salesmanList .text image{
  text-align: right;
  width: 1.3em;
  height: 1.3em;
}

.searchico{
  width: 1em;
  height: 1em;
}
.search{
  position: relative;
}
.search image{
  position: absolute;
  top: 50%;
  left: 8%;
  transform: translate(0,-50%);
}


