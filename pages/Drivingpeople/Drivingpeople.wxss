.drivinglist{
  margin: 0.75em;
  box-shadow: 0 0.5em 1em #697ef62a;
  padding: 0.5em 1.5em;
  border-radius: 0 0 0.5em 0.5em;
  position: relative;
}
.drivinglist:active{
  background: rgb(241, 241, 241);
}
.spot{
  width: 0.65em;
  height: 0.65em;
  border-radius: 50%;
  background: #6990f7;
  display: inline-block;
  vertical-align: middle;
  position: relative;
  top: 0.35em;
  margin-right: 1em;
}
.spot.green{
  background: #69f79f;
}
.d_info_item{
  display: flex;
  font-size: 0.85em;
  color: #9c9c9c;
  padding: 0.2em 0;
}

.drivingInfo{
  border-bottom: 1px solid #f6f6f6;
  padding: 0.75em 0;
}
.dial{
  padding: 1.5em;
  border-bottom: 1px solid #f6f6f6;
}
.dial .dialbgcolor{
  width: 1.5em;
  height: 1.5em;
  background: #ff6867;
  padding: 0.2em;
  border-radius: 50%;
  box-shadow: 0 0.5em 1em #ff676738;
}
.dial .dialbgcolor:active{
  opacity: 0.3;
}
.dial .dialbgcolor image{
  width: 100%;
  height: 100%;
}

.state{
  font-size: 0.85em;
  position: absolute;
  color: #fff;
  padding: 0.35em 0.75em;
  border-radius: 10em;
  right: 1em;
  bottom: 2.7em;
}
.color1{
  background-color: rgb(255, 136, 0);
}
.color2{
  background-color: #6990f7;
}
